# =============================================================================
# Trishool Subnet Environment Variables
# =============================================================================
# Copy this file to .env and fill in your actual values
# 
# Usage:
#   1. Copy this file: cp .env.example .env
#   2. Edit .env with your actual values
#   3. Never commit .env to version control (it's in .gitignore)
# =============================================================================

# =============================================================================
# API Keys (Required for Petri Evaluation)
# =============================================================================
# These API keys are required for the Petri agent to evaluate models
# Get your keys from the respective providers

# Chutes API key for model access
CHUTES_API_KEY=your_chutes_api_key_here

# Anthropic API key (for Claude models)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OpenAI API key (for OpenAI models)
OPENAI_API_KEY=your_openai_api_key_here

# OpenAI API base URL (optional, defaults to https://api.openai.com/v1)
# Use this if you're using a proxy or custom endpoint
OPENAI_API_BASE=https://api.openai.com/v1

# Chutes base URL (optional, defaults to provider default)
CHUTES_BASE_URL=https://api.chutes.ai

# =============================================================================
# Platform API Configuration
# =============================================================================
# Configuration for connecting to the Trishool platform API

# Platform API base URL
# Production: https://api.trishool.ai
# Development: http://localhost:8000
PLATFORM_API_URL=https://api.trishool.ai

# Bittensor wallet credentials for authentication
# These are required for validator and miner operations
COLDKEY_NAME=your_coldkey_name
HOTKEY_NAME=your_hotkey_name

# Bittensor network configuration
# Options: finney (mainnet), test (testnet)
NETWORK=finney

# Subnet UID (Network ID)
# Default: 35 (for testing)
NETUID=35

# Slot number for authentication (usually "1")
SLOT=1

# =============================================================================
# Validator Configuration
# =============================================================================
# These settings control validator behavior

# Maximum number of concurrent sandboxes (Docker containers) to run
# Higher values = more parallel evaluations but more resource usage
# Default: 5
MAX_CONCURRENT_SANDBOXES=5

# Interval to fetch new submissions from platform API (in seconds)
# Lower values = more frequent checks but more API calls
# Default: 30 seconds
EVALUATION_INTERVAL=30

# Interval to fetch and update weights from platform (in seconds)
# Default: 300 seconds (5 minutes)
UPDATE_WEIGHTS_INTERVAL=300

# Number of submissions to select randomly for evaluation
# Default: 3
RANDOM_SELECTION_COUNT=3

# =============================================================================
# Petri Commit Checker Configuration
# =============================================================================
# Configuration for monitoring astro-petri repository updates

# Interval to check for astro-petri repository updates (in seconds)
# When a new commit is detected, the Docker image is rebuilt
# Default: 300 seconds (5 minutes)
PETRI_COMMIT_CHECK_INTERVAL=300

# GitHub token (optional) for higher API rate limits
# Only needed if you hit GitHub API rate limits
# Get token from: https://github.com/settings/tokens
GITHUB_TOKEN=

# =============================================================================
# Development/Testing Configuration
# =============================================================================
# These are optional settings for development and testing

# Skip Docker image build (for faster development iterations)
# Set to "True" to skip building the Petri Docker image
# Default: False
SKIP_BUILD_IMAGE=False

# Override max_turns for Petri evaluation (for testing)
# If set, this value will override the max_turns from submission config
# Leave empty to use submission config value
MAX_TURNS=

# =============================================================================
# Logging Configuration (Optional)
# =============================================================================
# These settings control logging behavior

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
# Default: INFO
LOG_LEVEL=INFO

# Enable debug logging (set to True for verbose output)
# Default: False
DEBUG=False

# =============================================================================
# Notes
# =============================================================================
# - All paths are relative to the project root unless specified otherwise
# - Boolean values: Use "True"/"False" (case-sensitive) or empty string for False
# - Numeric values: Use integers without quotes
# - String values: No quotes needed unless the value contains spaces
# - Empty values: Leave empty or use empty string ""
# 
# Security Best Practices:
# - Never commit .env file to version control
# - Use strong, unique API keys
# - Rotate API keys regularly
# - Use environment-specific values (dev/staging/prod)
# =============================================================================
